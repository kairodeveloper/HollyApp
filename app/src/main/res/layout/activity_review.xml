<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ReviewActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_main_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="Review do filme"
        app:titleTextColor="@color/white"
        app:titleMarginStart="6dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints,RtlSymmetry"
        android:paddingLeft="30dp"
        android:paddingStart="30dp" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/ic_baseline_movie_filter_24"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="FILME"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Por: Kairo Emannoel"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="19/09/2020"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="18dp"
        android:layout_marginHorizontal="16dp"
        android:text="ashuadhuisdhauidhasuidahduihsuidhasiduhasuidhasiudhasiudh"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        />

</LinearLayout>